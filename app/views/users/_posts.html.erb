<% @current_user.posts.each do |p|%>
    <div class="p-2 border border-dark">
        <%=p.content%>
        <ul>
        <%=p.likes.count%>
        <%='Likes'%>
        <%= button_to likes_path, params: {like: {user_id: current_user.id, likable_id: p.id, likable_type: 'Post'}} do %>
        <i class="fa fa-thumbs-up">Like</i>
        <%end%>
        </ul>
        <ul>
        <li><%= link_to "Edit", edit_post_path(p) %></li>
        <li><%= link_to "Destroy", post_path(p), data: {
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure?"
                        } %></li>
        </ul>
        <h6>Comments</h6>
            <%=p.comments.count%> 
            <%="Comments"%> 
            <%p.comments.each do |com|%>
            <%=render 'comments/comments', comment: com%>
            <%end%>
        <h6>Add a comment:</h6>
        <%=render 'comments/form', {type: @type_post, id: p.id}%>
    </div>
<%end%>