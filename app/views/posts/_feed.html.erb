
<% @random_posts.each do |p|%>
<div class="p-2 border border-dark">

    <h4><%= link_to p.user.name, p.user%> </h4>
    <%=image_tag(p.user.avatar_url) if p.user.avatar? %>
    <%= p.content%>
    <ul>
    <%= p.likes.count%>
    <%='Likes'%>
    <%= button_to likes_path, params: {like: {user_id: current_user.id, likable_id: p.id, likable_type: 'Post'}} do %>
    <i class="fa fa-thumbs-up">Like</i>
    <%end%>
    </ul>
    <%="#{p.comments.count} Comments"%> 
        <%p.comments.each do |com|%>
        <%# <%=render 'comments/comments', comment: com%> %>
        <%end%>
    <h5>Add a comment:</h5>
    <%=render 'comments/form', {type: "Post", id: p.id}%>
</div>
<br>
<%end%>
